<div class="container bg-white p-4 shadow mt-5">
  <h1><%= @list.name %></h1>


  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card-trip">
        <%= image_tag(movie.poster_url) %>
        <div class="card-trip-infos">
          <div>
            <div class="d-flex">
              <h2><%= movie.title %></h2>
              <h2 class="text-secondary ms-3">- <%= movie.rating.round(1) %> ⭐</h2>
            </div>
            <p><%= movie.overview %></p>
          </div>
          <h2 class="card-trip-pricing">£99.99</h2>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'New bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>


</div>
